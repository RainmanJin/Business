	}
	$.ajax({
		url:$('#competition_index').val()+"/index.php?ajax=competition&op=team_creat&time="+ new Date().getTime(),
		data:'team_name='+$("#team-name-input").val(),
		type:'POST',
		async:true,
		beforeSend: function(){
			pop_loading();
		},
		success: function(text){
			pop_loading_close();
			if(text){
				alert(text);
			}else{
				window.location.reload();
			}
		}
	});
	
}
